<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="ConfigurationActivityTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WebViewActivityTheme" parent="android:Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/widget_rounded_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="TextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.Line">
        <item name="android:background">@drawable/text_rounded_background</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextStyle.Line.First">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextStyle.Line.Last">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextStyle.Label">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextStyle.Timestamp">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/text_rounded_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
